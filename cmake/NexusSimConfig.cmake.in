@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Find required dependencies
find_dependency(Threads REQUIRED)
find_dependency(Eigen3 REQUIRED)
find_dependency(spdlog REQUIRED)
find_dependency(HDF5 REQUIRED)

# Optional dependencies
if(@NEXUSSIM_ENABLE_MPI@)
    find_dependency(MPI REQUIRED)
endif()

if(@NEXUSSIM_ENABLE_OPENMP@)
    find_dependency(OpenMP REQUIRED)
endif()

if(@NEXUSSIM_ENABLE_GPU@)
    find_dependency(Kokkos REQUIRED)
endif()

# Include targets
include("${CMAKE_CURRENT_LIST_DIR}/NexusSimTargets.cmake")

check_required_components(NexusSim)
